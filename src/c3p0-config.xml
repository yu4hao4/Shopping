<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>

    <default-config>
        <property name="driverClass">com.mysql.jdbc.Driver</property> <!-- mysql驱动 -->
        <property name="jdbcUrl">jdbc:mysql://47.102.36.32:13306/shopping?useUnicode=true&amp;characterEncoding=UTF8</property>     <!-- shopping=数据库名 -->
        <property name="user">root</property> <!-- 数据库用户名 -->
        <property name="password">root</property> <!-- 数据库密码 -->

		<!--初始化时获取五个连接，取值应在minPoolSize与maxPoolSize之间。 -->
	    <property name="initialPoolSize">5</property>
	    <!--连接池中保留的最大连接数。-->
	    <property name="minPoolSize">5</property>
	    <!--连接池中保留的最大连接数。-->
	    <property name="maxPoolSize">15</property>
	    <!--最大空闲时间,30秒内未使用则连接被丢弃。若为0则永不丢弃。-->
	    <property name="maxIdleTime">30</property>
    </default-config>

</c3p0-config>